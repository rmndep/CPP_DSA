
#include<iostream>
using namespace std;

int main(){
    int n;
    cout<<"enter size of array:"<<endl;
    cin>>n;
    int index;
    int arr[n];
   
    cout<<"enter elements in array: ";
    for(int i=0;i<n;i++){
        cin>>arr[i];
    }
    cout<<"enter index that u want to delt: ";
    cin>>index;
    
    for(int i=index;i<n-1;i++){
        arr[i]=arr[i+1];
    }
    n--;
    cout<<"array after deletion: ";
    for(int i=0;i<n;i++){
        cout<<arr[i]<<" ";
    }
     return 0;
  
}
